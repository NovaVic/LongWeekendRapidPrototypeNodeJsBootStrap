extends layout

block content
  .container
      //form-horizontal adds spacing around elements; whereas a form does not 
      form.form-horizontal(action="api/user", method="post", role="form")
      
        .form-group
            label(for='namefield', class='col-xs-2') Name: 
            .col-xs-10
                input(type='text', class='form-control input-sm', id='namefield', name='namefield' placeholder='your name', required)
               
        .form-group
            label(for='emailfield', class='col-xs-2') Email: 
            .col-xs-10
                input(type='email', class='form-control input-md', id='emailfield', name='emailfield', placeholder='your email', required)
        
        .form-group
            label(for='passfield', class='col-xs-2') Password: 
            .col-xs-10
                input(type='password', class='form-control input-md', id='passfield', name= 'passfield', placeholder='your password', required)
        
        .form-group
            label(for='aboutfield', class='col-xs-2') About:
            .col-xs-10
                textarea(class='form-control', id='aboutfield',name='aboutfield', placeholder='A sentence or two about yourself')
        

        .col-xs-6.col-xs-offset-6
            button(type='submit' class='btn btn-primary') Submit

